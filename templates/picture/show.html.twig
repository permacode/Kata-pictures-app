{% extends 'base.html.twig' %}

{% block title %}Picture{% endblock %}

{% block body %}
    <h1>Picture</h1>

    <img src="{{picture.filename}}" alt="myPicture" />
    <div>
        <p>Added by {{user}}</p>
        <p>At {{createdAt}}</p>
        {% if picture.updatedAt is not null %}
            <p>updated at {{updatedAt}}</p>
        {% endif %}
    </div>

    <a href="{{ path('app_user_show') }}">Back to profile</a>

    <a href="{{ path('app_picture_edit', {'id': picture.id}) }}">edit</a>

    {{ include('picture/_delete_form.html.twig') }}
{% endblock %}
