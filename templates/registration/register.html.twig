{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="flex items-center justify-center h-screen bg-gray-100">
        <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="bg-red-100 text-red-700 p-3 rounded mb-4">
                    {{ flash_error }}
                </div>
            {% endfor %}

            <h1 class="text-3xl font-bold mb-6 text-center">Inscription</h1>

            {{ form_start(registrationForm, { 'attr': { 'class': 'space-y-4' } }) }}
                <div class="mb-4">
                    {{ form_label(registrationForm.email, null, { 'label_attr': { 'class': 'block text-gray-700' } }) }}
                    {{ form_widget(registrationForm.email, { 'attr': { 'class': 'w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500' } }) }}
                    {{ form_errors(registrationForm.email, { 'attr': { 'class': 'text-red-600 mt-2' } }) }}
                </div>

                <div class="mb-4">
                    {{ form_label(registrationForm.plainPassword, 'Mot de passe', { 'label_attr': { 'class': 'block text-gray-700' } }) }}
                    {{ form_widget(registrationForm.plainPassword, { 'attr': { 'class': 'w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500' } }) }}
                    {{ form_errors(registrationForm.plainPassword, { 'attr': { 'class': 'text-red-600 mt-2' } }) }}
                </div>

                <div class="mb-4">
                    {{ form_row(registrationForm.agreeTerms, { 'attr': { 'class': 'inline-flex items-center' } }) }}
                    {{ form_errors(registrationForm.agreeTerms, { 'attr': { 'class': 'text-red-600 mt-2' } }) }}
                </div>

                <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500">
                    Inscription
                </button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
