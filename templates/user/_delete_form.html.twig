<form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete your account?');" class="mt-4">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded">Delete your profile</button>
</form>

